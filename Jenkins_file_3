    agent any
    
    triggers {
        pollSCM('H 0 1 1 0')
    }

    options {
        buildDiscarder(logRotator(numToKeepStr:'100'))
    }
    
    

    stages {
        stage("Parameters Check"){
            steps {
                echo "AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
                echo 'Clean the job in the workspace'
                sh '''shopt -s extglob
                sudo rm -rf !(pipeline|scripts|firmware_lists)'''
            }
        }
        
    }
    post { 
        always {
            echo "Post::Always"    
            //sh 'git clean -xfdf'
            //deleteDir()
            echo "Post::Always 2"
            echo "Post::Always 3" 
        }
        success {
            echo "Post::Success"
        }
    }
}

