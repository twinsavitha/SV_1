

pipeline {
    agent any
    triggers {
        pollSCM('H 0 1 1 0')
    }

    options {
        buildDiscarder(logRotator(numToKeepStr:'100'))
    }
    
    

    stages {
        stage("Parameters Check"){
            steps {
                echo "AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
                dir("dir_name") {
                    git(
                       url: 'https://github.com/twinsavitha/allkiba.git',
                       branch: "master"
                    )
                }
            }
        }
        
    }
    post { 
        always {
            sh 'sudo git clean -xfdf'
        }
        success {
            echo "Post::Success"
        }
    }
}

