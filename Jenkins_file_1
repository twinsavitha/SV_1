pipeline {
    agent any
    environment {
        CC = "Clang"
    }
    stages {
        stage('Example') {
            environment {
                CC = "Clang"
            }
            steps {
                echo 'Hello World'
                sh 'printenv'
                echo 'Hi'
            }
        }
    }
    post { 
        always { 
            echo 'I will always say Hello again!'
        }
        success {
            echo "Post::Success"
        }
    }
}