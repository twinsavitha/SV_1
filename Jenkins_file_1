pipeline {
    agent any
    environment {
        CC = "Clang"
    }
    parameters{
        string(name: 'PERSON', defaultValue: 'Savi', description: 'My name')
    }
    stages {
        stage('Example') {
            environment {
                CC = "Clang"
            }
            steps {
                echo 'Hello World'
                sh 'printenv'
                echo 'Hi ${params.PERSON}'
            }
        }
    }
    post { 
        always { 
            echo 'I will always say Hello again!'
        }
        success {
            echo "Post::Success"
        }
    }
}